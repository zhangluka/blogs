@media screen and (max-width: 500px)
  header
    margin: 50px 0px
    padding: 0 44px 0 0
  #main
    margin: 50px 0px
    padding: 0 0 30px  
  #main > ul > li
    padding: 18px 0 20px
    flex-direction: column
    div.info
      margin: 0 !important
      width: 100%
    img
      margin: 0
  #main > ul > li:first-child
    margin-top: -35px
  #main h3.date
    font-size: 11px !important
    position: static !important
    margin-top: 10px
    align-self: flex-start
  #main > ul > li img.index-cover
    width: 80% !important
    margin: 0 !important
    margin-top: 10px !important
  #main > ul.archive li.archive-item
    padding: 20px 0 10px
  #main article.post
    line-height: 22px
    h1
      font-size: 28px
      line-height: 34px
    h2
      font-size: 22px
      line-height: 28px
    h3
      font-size: 20px
      line-height: 25px
    
